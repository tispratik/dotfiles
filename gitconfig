[core]
  excludesfile = ~/dotfiles/gitignore
  whitespace = cr-at-eol
  editor = /usr/bin/vim
  pager = less -+$LESS -FRX
[merge]
  tool = opendiff
[alias]
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
[color]
  ui = true
  interactive = auto
[branch]
  autosetuprebase = always
