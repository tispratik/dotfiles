[core]
  excludesfile = ~/dotfiles/gitignore
  whitespace = cr-at-eol
  editor = /usr/bin/vim
  pager = less -+$LESS -FRX
[merge]
  tool = opendiff
[alias]
  log = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%an%Creset' --abbrev-commit --date=relative
  logst = log --stat
[color]
  ui = true
  interactive = auto
[branch]
  autosetuprebase = always
  autosetupmerge = true
[diff]
  mnemonicprefix = true
[push]
  default = tracking
