function t {
  echo -e "\033];$1\007"
}

function rvm_ruby_prompt {
  if (declare -f rvm > /dev/null) {
      if [[ -x $MY_RUBY_HOME ]]
      then ruby -v | sed 's/\([^(]*\).*/\1/'
      fi
  }
}

function gadd(){
  git add "$@"; git status -s
}

function gco(){
  git checkout "$@"; git status -s
}

# Setup a tracking branch from [remote] [branch_name]
function gbt() {
  git branch --track $2 $1/$2 && git checkout $2
}
